@model MediClinic.Models.Appointment
@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
    ViewData["Title"] = "Book Appointment";
}

<div class="phys-container">

    <h2 class="phys-title">Book Appointment</h2>
    <p class="phys-subtitle">Request a new appointment</p>

    <div class="phys-card">

        <form asp-action="BookAppointment" method="post">

            <div class="mb-3">
                <label class="fw-semibold mb-2">Date</label>
                <input type="date"
                       class="form-control phys-input"
                       asp-for="AppointmentDate"
                       required />
            </div>

            <div class="mb-3">
                <label class="fw-semibold mb-2">Specialization</label>
                <select class="form-control phys-input"
                        asp-for="RequiredSpecialization"
                        required>
                    <option value="">-- Select --</option>
                    <option>Dermatology</option>
                    <option>Cardiology</option>
                    <option>General</option>
                    <option>Orthopedic</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="fw-semibold mb-2">Criticality</label>
                <select class="form-control phys-input"
                        asp-for="Criticality"
                        required>
                    <option value="">-- Select --</option>
                    <option>Low</option>
                    <option>Medium</option>
                    <option>High</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="fw-semibold mb-2">Reason</label>
                <textarea class="form-control phys-textarea"
                          asp-for="Reason"
                          required></textarea>
            </div>

            <div class="d-flex gap-3 mt-3">
                <button type="submit" class="btn btn-teal">
                    Submit Request
                </button>

                <a asp-action="Dashboard"
                   class="btn btn-outline-teal">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>
