@model MediClinic.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-lightblue text-dark fw-bold fs-4">
            Delete Schedule
        </div>
        <div class="card-body bg-white">

            <h5 class="mb-3 text-danger">Are you sure you want to delete this schedule?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3">Schedule Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ScheduleDate)</dd>

                <dt class="col-sm-3">Schedule Time</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ScheduleTime)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ScheduleStatus)</dd>

                <dt class="col-sm-3">Appointment ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.AppointmentId)</dd>

                <dt class="col-sm-3">Physician ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Physician.PhysicianId)</dd>
    </dl>
    
            <form asp-action="DeleteSchedule" class="d-flex gap-2">
        <input type="hidden" asp-for="ScheduleId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="GetSchedule" class="btn btn-secondary">Back to List</a>
    </form>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff; /* very light blue background */
        font-family: Arial, sans-serif;
    }

    .bg-lightblue {
        background-color: #cce7ff !important; /* soft light blue header */
    }

    .btn-lightblue {
        background-color: #5dade2;
        color: white;
        border: none;
    }

        .btn-lightblue:hover {
            background-color: #4a9edc;
        }

    .card {
        max-width: 900px;
        margin: auto;
        border-radius: 10px;
    }

    dt {
        font-weight: 500;
        color: #1a1a1a;
    }

    dd {
        margin-bottom: 0.75rem;
    }
</style>
