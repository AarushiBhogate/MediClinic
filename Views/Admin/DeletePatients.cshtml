@model MediClinic.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-lightblue text-dark fw-bold fs-4">
            Delete Patient
        </div>
        <div class="card-body bg-white">

            <h5 class="mb-3 text-danger">Are you sure you want to delete this patient?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3">Patient Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PatientName)</dd>

                <dt class="col-sm-3">Date of Birth</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Dob)</dd>

                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Summary</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Summary)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PatientStatus)</dd>
            </dl>

            <form asp-action="DeletePatients" class="d-flex gap-2">
                <input type="hidden" asp-for="PatientId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="GetPatients" class="btn btn-secondary">Back to List</a>
            </form>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff; /* very light blue background */
        font-family: Arial, sans-serif;
    }

    .bg-lightblue {
        background-color: #cce7ff !important; /* soft light blue header */
    }

    .btn-lightblue {
        background-color: #5dade2;
        color: white;
        border: none;
    }

        .btn-lightblue:hover {
            background-color: #4a9edc;
        }

    .card {
        max-width: 900px;
        margin: auto;
        border-radius: 10px;
    }

    dt {
        font-weight: 500;
        color: #1a1a1a;
    }

    dd {
        margin-bottom: 0.75rem;
    }
</style>
