@model MediClinic.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<h1>Supplier Details</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.SupplierName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.SupplierStatus</dd>
    </dl>
</div>

<div>
    <a asp-action="EditSupplier" asp-route-id="@Model.SupplierId" class="btn btn-warning">Edit</a> |
    <a asp-action="GetSuppliers" class="btn btn-secondary">Back to List</a>
</div>
