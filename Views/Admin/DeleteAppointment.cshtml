@model MediClinic.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-lightblue text-dark fw-bold fs-4">
            Delete Appointment
        </div>
        <div class="card-body bg-white">

            <h5 class="mb-3 text-danger">Are you sure you want to delete this appointment?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3">Appointment Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AppointmentDate)</dd>

                <dt class="col-sm-3">Criticality</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Criticality)</dd>

                <dt class="col-sm-3">Reason</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Reason)</dd>

                <dt class="col-sm-3">Note</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Note)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ScheduleStatus)</dd>

                <dt class="col-sm-3">Patient ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Patient.PatientId)</dd>
    </dl>
    
            <form asp-action="DeleteAppointment" class="d-flex gap-2">
        <input type="hidden" asp-for="AppointmentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="GetAppointment" class="btn btn-secondary">Back to List</a>
    </form>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff; /* very light blue */
        font-family: Arial, sans-serif;
    }

    .bg-lightblue {
        background-color: #cce7ff !important; /* soft light blue header */
    }

    .btn-lightblue {
        background-color: #5dade2;
        color: white;
        border: none;
    }

        .btn-lightblue:hover {
            background-color: #4a9edc;
        }

    .card {
        max-width: 900px;
        margin: auto;
        border-radius: 10px;
    }

    dt {
        font-weight: 500;
        color: #1a1a1a;
    }

    dd {
        margin-bottom: 0.75rem;
    }
</style>
