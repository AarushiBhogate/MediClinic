@model IEnumerable<MediClinic.Models.Appointment>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Appointments";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Appointment List</h4>
        
    </div>

    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>Date</th>
                    <th>Criticality</th>
                    <th>Reason</th>
                    <th>Note</th>
                    <th>Status</th>
                    <th>Patient</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.AppointmentDate
                        </td>

                        <!-- Criticality Badge -->
                        <td class="text-center">
                            @if (item.Criticality?.ToLower() == "high")
                            {
                                <span class="badge bg-danger">High</span>
                            }
                            else if (item.Criticality?.ToLower() == "medium")
                            {
                                <span class="badge bg-warning text-dark">Medium</span>
                            }
                            else if (item.Criticality?.ToLower() == "low")
                            {
                                <span class="badge bg-success">Low</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">N/A</span>
                            }
                        </td>

                        <td>@item.Reason</td>
                        <td>@item.Note</td>

                        <td class="text-center">
                            @if (item.ScheduleStatus?.ToLower() == "scheduled")
                            {
                                <span class="badge bg-primary">Scheduled</span>
                            }
                            else if (item.ScheduleStatus?.ToLower() == "completed")
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Scheduled</span>
                            }
                        </td>



                        <!-- Show Patient Name instead of ID -->
                        <td>
                            @item.Patient?.PatientName
                        </td>

                        @* <td class="text-center">
                            <a asp-action="EditAppointment"
                               asp-route-id="@item.AppointmentId"
                               class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="AppointmentDetails"
                               asp-route-id="@item.AppointmentId"
                               class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="DeleteAppointment"
                               asp-route-id="@item.AppointmentId"
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
