@model MediClinic.Models.Physician

@{
    ViewData["Title"] = "Delete Physician";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-lightblue text-dark fw-bold fs-4">
            Delete Physician
        </div>
        <div class="card-body bg-white">

            <h5 class="mb-3 text-danger">Are you sure you want to delete this physician?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3">Physician Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhysicianName)</dd>

                <dt class="col-sm-3">Specialization</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Specialization)</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Summary</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Summary)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhysicianStatus)</dd>
            </dl>

            <form asp-action="DeletePhysicians" class="d-flex gap-2">
                <input type="hidden" asp-for="PhysicianId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="GetPhysicians" class="btn btn-secondary">Back to List</a>
            </form>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff; /* very light blue background */
        font-family: Arial, sans-serif;
    }

    .bg-lightblue {
        background-color: #cce7ff !important; /* soft light blue header */
    }

    .btn-lightblue {
        background-color: #5dade2;
        color: white;
        border: none;
    }

        .btn-lightblue:hover {
            background-color: #4a9edc;
        }

    .card {
        max-width: 900px;
        margin: auto;
        border-radius: 10px;
    }

    dt {
        font-weight: 500;
        color: #1a1a1a;
    }

    dd {
        margin-bottom: 0.75rem;
    }
</style>
