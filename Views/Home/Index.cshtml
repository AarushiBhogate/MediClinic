@{
    ViewData["Title"] = "Home";
    var role = Context.Session.GetString("Role");
    var username = Context.Session.GetString("UserName");
}

<style>
    :root {
        --teal: #0f766e;
        --teal-dark: #115e59;
        --bg-soft: #f6fbfb;
        --card: #ffffff;
        --text: #0f172a;
        --muted: #64748b;
        --border: #e2e8f0;
    }

    body {
        background: var(--bg-soft);
    }

    .home-wrap {
        padding: 30px 0 40px 0;
    }

    .hero {
        background: linear-gradient(135deg, #0f766e 0%, #0ea5e9 100%);
        border-radius: 18px;
        padding: 34px 34px;
        color: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        position: relative;
        overflow: hidden;
    }

        .hero::after {
            content: "";
            position: absolute;
            right: -90px;
            top: -90px;
            width: 240px;
            height: 240px;
            background: rgba(255,255,255,0.12);
            border-radius: 50%;
        }

        .hero h1 {
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 8px;
            letter-spacing: 0.2px;
        }

        .hero p {
            margin: 0;
            font-size: 1.05rem;
            opacity: 0.95;
            max-width: 700px;
        }

    .hero-actions {
        margin-top: 18px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .btn-hero {
        border-radius: 12px;
        padding: 10px 18px;
        font-weight: 700;
        border: 0;
    }

    .btn-white {
        background: white;
        color: var(--teal);
    }

    .btn-outline-white {
        background: transparent;
        border: 2px solid rgba(255,255,255,0.75);
        color: white;
    }

    .section-title {
        margin-top: 26px;
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--text);
    }

    .section-sub {
        color: var(--muted);
        margin-top: 4px;
        margin-bottom: 14px;
    }

    .grid-4 {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 14px;
    }

    .grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 14px;
    }

    .cardx {
        background: var(--card);
        border-radius: 16px;
        border: 1px solid var(--border);
        padding: 18px;
        box-shadow: 0 8px 20px rgba(2,6,23,0.05);
        height: 100%;
        display: flex; /* IMPORTANT */
        flex-direction: column; /* IMPORTANT */
    }


        .cardx h5 {
            font-weight: 800;
            margin-bottom: 6px;
            color: var(--text);
        }

        .cardx p {
            margin: 0;
            color: var(--muted);
            font-size: 0.95rem;
            line-height: 1.3rem;
            flex-grow: 1; /* IMPORTANT: pushes button down */
        }

    .icon-circle {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-bottom: 12px;
        background: rgba(15,118,110,0.12);
        color: var(--teal-dark);
        font-weight: 800;
    }

    .role-btn {
        margin-top: 16px;
        width: 100%;
        height: 44px; /* IMPORTANT */
        border-radius: 12px;
        font-weight: 800;
        padding: 0 12px;
        background: #0f766e;
        border: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .role-btn:hover {
            background: #115e59;
        }

    .mini-steps {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 14px;
    }

    .step {
        background: white;
        border-radius: 16px;
        border: 1px solid var(--border);
        padding: 18px;
        box-shadow: 0 8px 20px rgba(2,6,23,0.05);
    }

        .step .num {
            width: 38px;
            height: 38px;
            border-radius: 14px;
            background: rgba(14,165,233,0.12);
            color: #0369a1;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 900;
            margin-bottom: 10px;
        }

    .footer-mini {
        margin-top: 22px;
        padding-top: 14px;
        border-top: 1px solid var(--border);
        color: var(--muted);
        font-size: 0.9rem;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
    }

    /* Responsive */
    @@media(max-width: 992px) {
        .grid-4 {
            grid-template-columns: repeat(2, 1fr);
        }

        .grid-3 {
            grid-template-columns: repeat(2, 1fr);
        }

        .mini-steps {
            grid-template-columns: 1fr;
        }
    }

    @@media(max-width: 576px) {
        .grid-4 {
            grid-template-columns: 1fr;
        }

        .grid-3 {
            grid-template-columns: 1fr;
        }

        .hero {
            padding: 24px;
        }

            .hero h1 {
                font-size: 1.7rem;
            }
    }
</style>

<div class="container home-wrap">

    <!-- HERO -->
    <div class="hero">
        <h1>MediClinic</h1>
        <p>
            A simple clinic automation system to manage appointments, schedules,
            medical advice, prescriptions, and pharmacy requests — all in one place.
        </p>

        <div class="hero-actions">

            @if (!string.IsNullOrEmpty(role))
            {
                <a class="btn btn-hero btn-white" href="/@role/Dashboard">
                    Go to Dashboard
                </a>

                <span class="btn btn-hero btn-outline-white" style="cursor:default;">
                    Logged in as: @username (@role)
                </span>
            }
            else
            {
                <a class="btn btn-hero btn-white" href="/User/Login">Login</a>
                <a class="btn btn-hero btn-outline-white" href="/User/Register">Register</a>
            }

        </div>
    </div>

    <!-- ROLES -->
    <h3 class="section-title">Choose your portal</h3>
    <p class="section-sub">Select your role to access the system features.</p>

    <div class="grid-4">
        <div class="cardx">
            <div class="icon-circle">👤</div>
            <h5>Patient</h5>
            <p>Book appointments, view advice, prescriptions, and history.</p>
            <a class="btn btn-success role-btn" href="/User/Login">Patient Login</a>
        </div>

        <div class="cardx">
            <div class="icon-circle">🩺</div>
            <h5>Physician</h5>
            <p>Accept requests, manage schedule, add advice and prescriptions.</p>
            <a class="btn btn-success role-btn" href="/User/Login">Physician Login</a>
        </div>

        <div class="cardx">
            <div class="icon-circle">🧪</div>
            <h5>Chemist</h5>
            <p>Manage drug requests and purchase orders (optional module).</p>
            <a class="btn btn-success role-btn" href="/User/Login">Chemist Login</a>
        </div>

        <div class="cardx">
            <div class="icon-circle">🛡</div>
            <h5>Admin</h5>
            <p>Manage users, verify patients, and maintain master data.</p>
            <a class="btn btn-success role-btn" href="/User/Login">Admin Login</a>
        </div>
    </div>

    <!-- FEATURES -->
    <h3 class="section-title">Key features</h3>
    <p class="section-sub">Core modules included in the Clinic Automation System.</p>

    <div class="grid-3">
        <div class="cardx">
            <div class="icon-circle">📅</div>
            <h5>Appointment Management</h5>
            <p>Patients raise appointment requests and physicians accept & schedule them.</p>
        </div>

        <div class="cardx">
            <div class="icon-circle">📝</div>
            <h5>Advice & Prescription</h5>
            <p>Physicians add advice and prescriptions after completing the appointment.</p>
        </div>

        <div class="cardx">
            <div class="icon-circle">💊</div>
            <h5>Drug Requests</h5>
            <p>Physicians can raise drug requests to the clinic for stock and availability.</p>
        </div>
    </div>

    <!-- HOW IT WORKS -->
    <h3 class="section-title">How it works</h3>
    <p class="section-sub">A simple workflow from request to completion.</p>

    <div class="mini-steps">
        <div class="step">
            <div class="num">1</div>
            <h5 class="fw-bold mb-1">Register & Login</h5>
            <p class="text-muted mb-0">
                Users login to the system based on their role.
            </p>
        </div>

        <div class="step">
            <div class="num">2</div>
            <h5 class="fw-bold mb-1">Request & Schedule</h5>
            <p class="text-muted mb-0">
                Patients request appointments and physicians confirm schedules.
            </p>
        </div>

        <div class="step">
            <div class="num">3</div>
            <h5 class="fw-bold mb-1">Complete & Record</h5>
            <p class="text-muted mb-0">
                Physician completes the visit and records advice + prescription.
            </p>
        </div>
    </div>

    <!-- FOOTER -->
    <div class="footer-mini">
        <div>© 2026 MediClinic</div>
        <div>
            <a href="/Home/Privacy" class="text-decoration-none">Privacy</a>
            <span class="mx-2">•</span>
            <span>Clinic Automation System</span>
        </div>
    </div>

</div>
