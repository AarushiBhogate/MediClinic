@model List<MediClinic.Models.AppointmentRequestVM>

@{
    ViewData["Title"] = "Appointment Requests";
}

<h2>Appointment Requests</h2>

<p class="text-muted">
    Showing requests for specialization:
    <b>@ViewBag.Specialization</b>
</p>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No appointment requests found for your specialization.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Patient</th>
                <th>Date</th>
                <th>Criticality</th>
                <th>Reason</th>
                <th>Note</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PatientName</td>
                    <td>@item.AppointmentDate</td>
                    <td>@item.Criticality</td>
                    <td>@item.Reason</td>
                    <td>@item.Note</td>
                    <td>
                        <a class="btn btn-success btn-sm"
                           asp-controller="Appointment"
                           asp-action="Schedule"
                           asp-route-id="@item.AppointmentId">
                            Accept & Schedule
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
