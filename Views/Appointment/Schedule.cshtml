@model MediClinic.Models.ScheduleCreateVM

@{
    ViewData["Title"] = "Schedule Appointment";
}

<h2>Schedule Appointment</h2>

<form method="post">
    <input type="hidden" asp-for="AppointmentId" />

    <div class="mb-3">
        <label class="form-label">Schedule Date</label>
        <input type="date" asp-for="ScheduleDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Schedule Time</label>
        <input type="text" asp-for="ScheduleTime" class="form-control" placeholder="e.g. 11:30" />
    </div>

    <button type="submit" class="btn btn-primary">
        Confirm Schedule
    </button>

    <a class="btn btn-secondary"
       asp-controller="Appointment"
       asp-action="Requests">
        Cancel
    </a>
</form>
