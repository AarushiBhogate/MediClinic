@model MediClinic.Models.PurchaseOrderHeader

@{
    Layout = "~/Views/Shared/_SupplierLayout.cshtml";
    ViewData["Title"] = "Purchase Order Details";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4>PO No: @Model.Pono</h4>
    </div>
    <div class="card-body">
        <p><strong>PO Date:</strong> @Model.Podate</p>
        <p><strong>Status:</strong> @Model.PurchaseOrderStatus</p>

        <table class="table table-bordered table-hover mt-3">
            <thead class="table-dark text-center">
                <tr>
                    <th>Sl No</th>
                    <th>Drug</th>
                    <th>Quantity</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PurchaseProductLines != null)
                {
                    int sl = 1;
                    foreach (var line in Model.PurchaseProductLines)
                    {
                        <tr>
                            <td class="text-center">@sl</td>
                            <td>@line.Drug?.DrugTitle</td>
                            <td class="text-center">@line.Qty</td>
                            <td>@line.Note</td>
                        </tr>
                        sl++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

