@model MediClinic.Models.Supplier

@{
    ViewData["Title"] = "Supplier Dashboard";
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        font-family: 'Segoe UI', sans-serif;
    }

    .dashboard-wrapper {
        padding: 60px 0;
    }

    .dashboard-title {
        font-weight: 700;
        color: #ffffff;
        font-size: 32px;
    }

    .dashboard-subtitle {
        color: #dcdcdc;
        font-size: 15px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 30px;
        color: #fff;
        box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        transition: 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.4);
        }

    .dashboard-btn {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        background: linear-gradient(45deg, #00c6ff, #0072ff);
        color: #fff;
        transition: 0.3s;
    }

        .dashboard-btn:hover {
            opacity: 0.8;
            color: #fff;
        }

    .dashboard-btn-outline {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        border: 2px solid #00c6ff;
        color: #00c6ff;
        transition: 0.3s;
    }

        .dashboard-btn-outline:hover {
            background: #00c6ff;
            color: #fff;
        }

    .icon {
        font-size: 35px;
        margin-bottom: 15px;
    }
</style>

<div class="dashboard-wrapper">
    <div class="container">

        <!-- HEADER -->
        <div class="text-center mb-5">
            <h2 class="dashboard-title">Supplier Dashboard</h2>
            <p class="dashboard-subtitle">
                Manage your supply operations with style and efficiency
            </p>
    </div>

        <div class="row g-4">

            <!-- WELCOME CARD -->
            <div class="col-lg-4">
                <div class="glass-card text-center h-100">
                    <div class="icon">🤝</div>
                    <h4>
                        Welcome,
                        <span style="color:#00c6ff;">
                            @(Model?.SupplierName ?? "Supplier")
                        </span> 👋
                    </h4>
                    <p class="mt-3">
                        Monitor orders, manage profile,
                        and track supply history seamlessly.
                    </p>
        </div>

        <div class="profile-item">
            <span class="profile-label">📞 Phone:</span> @Model.Phone
        </div>

            <!-- ACTION CARDS -->
            <div class="col-lg-8">
                <div class="row g-4">

                    <!-- PROFILE -->
                    <div class="col-md-6">
                        <div class="glass-card text-center h-100">
                            <div class="icon">🏢</div>
                            <h5>My Profile</h5>
                            <p>Edit and update your company details</p>
                            <a asp-action="EditProfile"
                               class="dashboard-btn">
                                Edit Profile
                            </a>
        </div>

    </div>

                    <!-- PENDING ORDERS -->
                    <div class="col-md-6">
                        <div class="glass-card text-center h-100">
                            <div class="icon">📦</div>
                            <h5>Pending Orders</h5>
                            <p>View and manage pending supply requests</p>
        <a asp-action="PendingOrders"
                               class="dashboard-btn">
                                View Pending
        </a>
                        </div>
                    </div>

                    <!-- ORDER HISTORY -->
                    <div class="col-md-6">
                        <div class="glass-card text-center h-100">
                            <div class="icon">📋</div>
                            <h5>Order History</h5>
                            <p>Track completed supply transactions</p>
        <a asp-action="OrderHistory"
                               class="dashboard-btn-outline">
                                View History
        </a>
    </div>
                    </div>

                </div>
            </div>

</div>
    </div>
</div>
