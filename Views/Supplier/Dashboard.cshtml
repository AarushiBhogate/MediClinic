@{
    Layout = "~/Views/Shared/_SupplierLayout.cshtml";
}

<h2>Supplier Dashboard</h2>

<div style="display:flex; gap:30px; margin-top:20px;">

    <div style="background:white; padding:20px; width:220px; border-radius:10px; box-shadow:0 4px 10px rgba(0,0,0,0.05);">
        <h4>Total Orders</h4>
        <h2>@ViewBag.TotalOrders</h2>
    </div>

    <div style="background:white; padding:20px; width:220px; border-radius:10px; box-shadow:0 4px 10px rgba(0,0,0,0.05);">
        <h4>Pending Orders</h4>
        <h2>@ViewBag.PendingOrders</h2>
    </div>

</div>

<br />

<a href="/Supplier/ViewPendingOrders"
   style="display:inline-block; padding:10px 20px; background:#3b82f6; color:white; border-radius:6px; text-decoration:none;">
    View Orders
</a>