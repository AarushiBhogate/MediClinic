@model IEnumerable<MediClinic.Models.Drug>

@{
    ViewData["Title"] = "Available Medicines";
    var today = DateOnly.FromDateTime(DateTime.Now);
}

<div class="container py-5">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Available Medicines</h2>

        <div class="d-flex gap-3">
            <input type="text" id="searchInput"
                   class="form-control shadow-sm"
                   placeholder="Search medicine...">

            <select id="sortSelect" class="form-select shadow-sm">
                <option value="name">Sort by Name</option>
                <option value="expiry">Sort by Expiry</option>
            </select>
        </div>
    </div>

    <!-- MEDICINE GRID -->
    <div class="row g-4" id="medicineContainer">

        @foreach (var drug in Model)
        {
            var isExpired = drug.Expiry.HasValue && drug.Expiry < today;
            var isNearExpiry = drug.Expiry.HasValue && drug.Expiry <= today.AddDays(30);

            <div class="col-md-6 col-lg-4 medicine-card"
                 data-name="@drug.DrugTitle"
                 data-expiry="@(drug.Expiry?.ToString() ?? "")">

                <div class="card medicine shadow-sm border-0 h-100">

                    <div class="card-body">

                        <!-- ICON -->
                        @* <div class="medicine-icon mb-3">
                            💊
                        </div> *@

                        <!-- TITLE -->
                        <h5 class="fw-bold">@drug.DrugTitle</h5>

                        <p class="text-muted small">
                            @drug.Description
                        </p>

                        <!-- DOSAGE -->
                        <span class="badge bg-success-subtle text-success">
                            @drug.Dosage
                        </span>

                        <!-- STATUS -->
                        <div class="mt-3">
                            @if (isExpired)
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }

                            @if (isNearExpiry && !isExpired)
                            {
                                <span class="badge bg-warning text-dark ms-2">
                                    Near Expiry
                                </span>
                            }
                        </div>

                        <!-- EXPIRY DATE -->
                        <div class="mt-2 small">
                            Expiry:
                            <span class="@(isExpired ? "text-danger" : "")">
                                @drug.Expiry
                            </span>
                        </div>

                        <!-- BUTTON -->
                        <div class="mt-3">
                            <a class="btn btn-success rounded-pill w-100"
                               asp-action="Details"
                               asp-route-id="@drug.DrugId">
                                View Details
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }

    </div>

    <!-- PAGINATION -->
    <div class="d-flex justify-content-center mt-4">
        <button class="btn btn-outline-secondary me-2" onclick="prevPage()">Previous</button>
        <button class="btn btn-outline-secondary" onclick="nextPage()">Next</button>
    </div>

</div>
<style>
    body {
        background: #E9EEF2;
    }

    .medicine {
        border-left: 5px solid #1f7a6c;
        border-radius: 18px;
        transition: all 0.3s ease;
    }

        .medicine:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        }

    .medicine-icon {
        font-size: 32px;
    }

    .btn-success {
        background: #1f7a6c;
        border: none;
    }

        .btn-success:hover {
            background: #176358;
        }

    .badge-active {
        background: #e6f4f1;
        color: #1f7a6c;
        padding: 6px 12px;
        border-radius: 30px;
        font-weight: 500;
    }

    .card-body {
        padding: 22px;
    }

    .medicine:hover {
        transform: translateY(-8px);
    }

</style>
<script>
    const cards = Array.from(document.querySelectorAll('.medicine-card'));
    const itemsPerPage = 6;
    let currentPage = 1;

    function showPage(page) {
        currentPage = page;
        cards.forEach((card, index) => {
            card.style.display =
                index >= (page - 1) * itemsPerPage &&
                index < page * itemsPerPage
                ? 'block' : 'none';
        });
    }

    function nextPage() {
        if (currentPage * itemsPerPage < cards.length)
            showPage(currentPage + 1);
    }

    function prevPage() {
        if (currentPage > 1)
            showPage(currentPage - 1);
    }

    showPage(1);

    // SEARCH
    document.getElementById('searchInput').addEventListener('keyup', function () {
        const value = this.value.toLowerCase();
        cards.forEach(card => {
            const name = card.dataset.name.toLowerCase();
            card.style.display = name.includes(value) ? 'block' : 'none';
        });
    });

    // SORT
    document.getElementById('sortSelect').addEventListener('change', function () {
        const container = document.getElementById('medicineContainer');
        const sorted = cards.sort((a, b) => {
            if (this.value === 'name') {
                return a.dataset.name.localeCompare(b.dataset.name);
            }
            else {
                return new Date(a.dataset.expiry) - new Date(b.dataset.expiry);
            }
        });

        sorted.forEach(card => container.appendChild(card));
        showPage(1);
    });
</script>
