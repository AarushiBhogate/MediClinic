@model List<MediClinic.Models.PhysicianAdvice>

<h2>My Prescriptions</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Doctor</th>
            <th>Specialization</th>
            <th>Reason</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Schedule?.Appointment?.AppointmentDate?.ToString("dd MMM yyyy")</td>
                <td>@item.Schedule?.Physician?.PhysicianName</td>
                <td>@item.Schedule?.Physician?.Specialization</td>
                <td>@item.Schedule?.Appointment?.Reason</td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.PhysicianAdviceId"
                       class="btn btn-sm btn-primary">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
