@model IEnumerable<MediClinic.Models.PhysicianPrescrip>
@{
    ViewData["Title"] = "My Prescriptions";
    Layout = "~/Views/Shared/_HospitalLayout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h3 class="fw-bold mb-1">My Prescriptions</h3>
        <small class="text-muted">Access and manage your digital prescriptions</small>
    </div>

    <a asp-controller="Appointments" asp-action="Index"
       class="btn btn-primary">
        Book Appointment
    </a>
</div>


@if (!Model.Any())
{
    <div class="alert alert-info">
        No prescriptions available.
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="prescription-card d-flex justify-content-between align-items-center">

            <div>
                <h5 class="mb-1">
                    Drug: @item.Drug?.DrugTitle
                </h5>

                <p class="mb-1 text-muted">
                    Dosage: @item.Dosage
                </p>

                <p class="mb-0">
                    Instructions: @item.Prescription
                </p>
            </div>

            <div>
                <a asp-action="Details"
                   asp-route-id="@item.PrescriptionId"
                   class="btn btn-outline-primary">
                    View
                </a>
            </div>

        </div>
    }

}

