@model IEnumerable<MediClinic.Models.Schedule>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Schedules";
}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3>Schedule List</h3>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Schedule
        </a>
    </div>

    <div class="card-body">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Physician</th>
                    <th>Appointment ID</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th width="220px">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Physician?.PhysicianName</td>
                        <td>@item.AppointmentId</td>
                        <td>@item.ScheduleDate </td>
                        <td>@item.ScheduleTime</td>
                        <td>
                            @if (item.ScheduleStatus == "Confirmed")
                            {
                                <span class="badge bg-success">Sheduled</span>
                            }
                            else if (item.ScheduleStatus == "Pending")
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@item.ScheduleStatus</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit"
                               asp-route-id="@item.ScheduleId"
                               class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a asp-action="Details"
                               asp-route-id="@item.ScheduleId"
                               class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.ScheduleId"
                               class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
