@{
    ViewData["Title"] = "Edit Advice";
    var schedule = ViewBag.Schedule as MediClinic.Models.Schedule;
    var advice = ViewBag.Advice as MediClinic.Models.PhysicianAdvice;
}

<div class="phys-container">

    <h2 class="phys-title">Edit Advice</h2>
    <p class="phys-subtitle">Update advice for the selected patient</p>

    <div class="phys-card phys-form">

        <div class="mb-3 phys-info">
            <div><b>Patient:</b> @schedule?.Appointment?.Patient?.PatientName</div>
        </div>

        <form method="post" action="/PhysicianAdvice/EditAdvice">

            <input type="hidden" name="scheduleId" value="@schedule?.ScheduleId" />
            <input type="hidden" name="physicianAdviceId" value="@advice?.PhysicianAdviceId" />

            <div class="mb-3">
                <label>Advice *</label>
                <textarea class="form-control phys-textarea" name="advice" required>@advice?.Advice</textarea>
            </div>

            <div class="mb-3">
                <label>Doctor Note</label>
                <input class="form-control phys-input" name="note" value="@advice?.Note" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-teal">Update Advice</button>
                <a class="btn btn-outline-teal" href="/PhysicianAdvice/Index">Cancel</a>
            </div>

        </form>

    </div>
</div>
