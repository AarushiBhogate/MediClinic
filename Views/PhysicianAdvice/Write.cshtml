@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@{
    ViewData["Title"] = "Write Advice";
    var schedule = ViewBag.Schedule as MediClinic.Models.Schedule;
}

<div class="phys-container">

    <div class="phys-header">
        <h2 class="phys-title">Write Advice</h2>
        <p class="phys-subtitle">
            Add doctor advice for the selected appointment
        </p>
    </div>

    <div class="phys-card">

        <div class="phys-info-grid">
            <div class="phys-info-item">
                <div class="phys-info-label">Patient</div>
                <div class="phys-info-value">
                    @schedule?.Appointment?.Patient?.PatientName
                </div>
            </div>

            <div class="phys-info-item">
                <div class="phys-info-label">Criticality</div>
                <div class="phys-info-value">
                    @schedule?.Appointment?.Criticality
                </div>
            </div>

            <div class="phys-info-item">
                <div class="phys-info-label">Reason</div>
                <div class="phys-info-value">
                    @schedule?.Appointment?.Reason
                </div>
            </div>

            <div class="phys-info-item">
                <div class="phys-info-label">Note</div>
                <div class="phys-info-value">
                    @schedule?.Appointment?.Note
                </div>
            </div>
        </div>

        <div class="phys-divider"></div>

        <form method="post" action="/PhysicianAdvice/Write">
            <input type="hidden" name="scheduleId"
                   value="@schedule?.ScheduleId" />

            <div class="mb-4">
                <label class="fw-semibold mb-2">Advice *</label>
                <textarea class="form-control phys-textarea"
                          name="advice" required></textarea>
            </div>

            <div class="mb-4">
                <label class="fw-semibold mb-2">Doctor Note</label>
                <input class="form-control phys-input"
                       name="note" />
            </div>

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-teal">
                    Save & Mark Completed
                </button>

                <a class="btn btn-outline-teal"
                   href="/PhysicianAdvice/Index">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>
