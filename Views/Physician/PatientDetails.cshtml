@model MediClinic.Models.ModelViews.PatientDetailsVM


@{
    ViewData["Title"] = "Patient Details";
}

<div class="container mt-3">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold mb-0">Patient Details</h3>

        <a class="btn btn-outline-secondary"
           href="javascript:history.back()">
            Back
        </a>
    </div>

    <!-- Patient Basic Info -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Basic Information</h5>

            <div class="row">
                <div class="col-md-6">
                    <p><b>Name:</b> @Model.PatientName</p>
                    <p><b>Gender:</b> @(Model.Gender ?? "N/A")</p>
                </div>
                <div class="col-md-6">
                    <p><b>Phone:</b> @(Model.Phone ?? "N/A")</p>
                    <p><b>Email:</b> @(Model.Email ?? "N/A")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Medical Profile -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Medical Profile</h5>

            <div class="row">
                <div class="col-md-6">
                    <p><b>Allergies:</b> @(Model.Allergies ?? "Not Provided")</p>
                    <p><b>Past Illness:</b> @(Model.PastIllness ?? "Not Provided")</p>
                </div>
                <div class="col-md-6">
                    <p><b>Chronic Diseases:</b> @(Model.ChronicDiseases ?? "Not Provided")</p>
                    <p><b>Notes:</b> @(Model.Notes ?? "Not Provided")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Previous Visits -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Previous Completed Visits</h5>

            @if (Model.PreviousVisits == null || Model.PreviousVisits.Count == 0)
            {
                <p class="text-muted mb-0">No previous completed visits found.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Reason</th>
                                <th>Criticality</th>
                                <th>Advice</th>
                                <th>Prescription</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.PreviousVisits)
                            {
                                <tr>
                                    <td>@v.ScheduleDate</td>
                                    <td>@v.ScheduleTime</td>
                                    <td>@v.Reason</td>
                                    <td>
                                        <span class="badge bg-secondary">@v.Criticality</span>
                                    </td>
                                    <td>@v.Advice</td>
                                    <td>
                                        <a class="btn btn-sm btn-dark"
                                           href="/Prescription/View?physicianAdviceId=@v.PhysicianAdviceId">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

</div>
