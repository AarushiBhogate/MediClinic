@{
    ViewData["Title"] = "Dashboard";
    var username = Context.Session.GetString("UserName") ?? "Doctor";
}

<div class="phys-container">

    <div class="phys-hero">
        <h1 class="phys-title">Hello, Dr. @username 👋</h1>
        <p class="phys-subtitle mb-0">
            Manage appointments, schedules, advice, and drug requests from one place.
        </p>
    </div>

    <div class="row g-4">

        <!-- Appointment Requests -->
        <div class="col-md-6">
            <div class="phys-card h-100 d-flex flex-column">
                <div class="d-flex gap-3 align-items-start">
                    <div style="width:58px;height:58px;border-radius:16px;background:#eef2ff;display:flex;align-items:center;justify-content:center;font-size:28px;">
                        📩
                    </div>

                    <div>
                        <h4 class="mb-1 fw-bold">Appointment Requests</h4>
                        <div class="text-muted">New patient appointment requests</div>
                    </div>
                </div>

                <!-- button bottom -->
                <div class="mt-auto pt-4">
                    <a class="btn btn-teal w-100" href="/Appointment/Requests">Open</a>
                </div>
            </div>
        </div>

        <!-- My Schedule -->
        <div class="col-md-6">
            <div class="phys-card h-100 d-flex flex-column">
                <div class="d-flex gap-3 align-items-start">
                    <div style="width:58px;height:58px;border-radius:16px;background:#ecfeff;display:flex;align-items:center;justify-content:center;font-size:28px;">
                        📅
                    </div>

                    <div>
                        <h4 class="mb-1 fw-bold">My Schedule</h4>
                        <div class="text-muted">Upcoming confirmed appointments</div>
                    </div>
                </div>

                <div class="mt-auto pt-4">
                    <a class="btn btn-teal w-100" href="/Schedule/MySchedule">Open</a>
                </div>
            </div>
        </div>

        <!-- Advice & Prescription -->
        <div class="col-md-6">
            <div class="phys-card h-100 d-flex flex-column">
                <div class="d-flex gap-3 align-items-start">
                    <div style="width:58px;height:58px;border-radius:16px;background:#fef9c3;display:flex;align-items:center;justify-content:center;font-size:28px;">
                        📝
                    </div>

                    <div>
                        <h4 class="mb-1 fw-bold">Advice & Prescription</h4>
                        <div class="text-muted">Write advice for completed visits</div>
                    </div>
                </div>

                <div class="mt-auto pt-4">
                    <a class="btn btn-teal w-100" href="/PhysicianAdvice/Index">Open</a>
                </div>
            </div>
        </div>

        <!-- Drug Request -->
        <div class="col-md-6">
            <div class="phys-card h-100 d-flex flex-column">
                <div class="d-flex gap-3 align-items-start">
                    <div style="width:58px;height:58px;border-radius:16px;background:#ffe4e6;display:flex;align-items:center;justify-content:center;font-size:28px;">
                        💊
                    </div>

                    <div>
                        <h4 class="mb-1 fw-bold">Drug Request</h4>
                        <div class="text-muted">Request new medicines from clinic</div>
                    </div>
                </div>

                <div class="mt-auto pt-4">
                    <a class="btn btn-teal w-100" href="/DrugRequest/Index">Open</a>
                </div>
            </div>
        </div>

    </div>

</div>
