@{
    var title = ViewData["CardTitle"] as string ?? ViewData["Title"] ?? "Form";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f4f7fb, #e6ecf5);
        }

        .page-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .card-custom {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.06);
            padding: 40px;
            width: 100%;
            max-width: 900px;
        }

        .form-title {
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="page-container">
        <div class="container">
            <div class="card-custom col-md-8 mx-auto">

                <h3 class="form-title text-center">@title</h3>

                @RenderBody()

            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>