<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - MediClinic Admin</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            overflow-x: hidden;
        }

        /* SIDEBAR */
        .sidebar {
            width: 260px;
            min-height: 100vh;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar .nav-link span {
                transition: opacity 0.2s ease;
            }

            .sidebar.collapsed .nav-link span,
            .sidebar.collapsed h4 {
                opacity: 0;
                visibility: hidden;
            }

        .sidebar-link {
            color: #adb5bd;
        }

            .sidebar-link:hover,
            .sidebar-link.active {
                background-color: #495057;
                color: white !important;
                border-radius: 5px;
            }

        /* MAIN SECTION */
        .main-section {
            transition: margin-left 0.3s ease;
            width: 100%;
        }
    </style>
</head>

<body class="bg-light">

    <div class="d-flex">

        <!-- SIDEBAR -->
        <div id="sidebar" class="bg-dark text-white p-3 sidebar">

            <h4 class="mb-4 text-center">MediClinic Admin</h4>

            <ul class="nav nav-pills flex-column gap-2">

                <li class="nav-item">
                    <a asp-action="Index" class="nav-link sidebar-link active">
                        <i class="fas fa-home me-2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="GetPhysiciansDetail" class="nav-link sidebar-link">
                        <i class="fas fa-user-md me-2"></i>
                        <span>Physicians</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="GetPatientsDetail" class="nav-link sidebar-link">
                        <i class="fas fa-procedures me-2"></i>
                        <span>Patients</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="GetSuppliersDetail" class="nav-link sidebar-link">
                        <i class="fas fa-truck me-2"></i>
                        <span>Suppliers</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="GetChemistsDetail" class="nav-link sidebar-link">
                        <i class="fas fa-pills me-2"></i>
                        <span>Chemists</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="GetScheduleDetails" class="nav-link sidebar-link">
                        <i class="fas fa-calendar me-2"></i>
                        <span>Schedules</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="GetAppointmentDetails" class="nav-link sidebar-link">
                        <i class="fas fa-calendar me-2"></i>
                        <span>Appointments</span>
                    </a>
                </li>

            </ul>
        </div>

        <!-- MAIN SECTION -->
        <div id="mainSection" class="flex-fill main-section">

            <!-- TOP NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4">

                <div class="container-fluid">

                    <!-- Toggle Button -->
                    <button id="toggleSidebar" class="btn btn-light">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center gap-4">

                        <a href="#" class="text-dark text-decoration-none">
                            <i class="fas fa-home me-1"></i> Home
                        </a>

                        <a href="#" class="text-dark text-decoration-none position-relative">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                3
                            </span>
                        </a>

                        <a href="#" class="text-dark text-decoration-none">
                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                        </a>

                    </div>

                </div>
            </nav>

            <!-- PAGE CONTENT -->
            <div class="p-4">
                @RenderBody()
            </div>

        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Collapse Script -->
    <script>
        document.getElementById("toggleSidebar")
            .addEventListener("click", function () {

                document.getElementById("sidebar")
                    .classList.toggle("collapsed");
            });
    </script>

</body>
</html>
