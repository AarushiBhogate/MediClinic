<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediClinic</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f1f5f9;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, #0f766e, #0e7490);
            padding-top: 30px;
            color: white;
            box-shadow: 4px 0 10px rgba(0,0,0,0.05);
        }

            .sidebar h4 {
                font-weight: 700;
                padding-left: 25px;
                margin-bottom: 40px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 14px 25px;
                color: rgba(255,255,255,0.9);
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: rgba(255,255,255,0.15);
                    padding-left: 35px;
                }

                .sidebar a.active {
                    background-color: rgba(255,255,255,0.25);
                    border-left: 4px solid #ffffff;
                }

            .sidebar i {
                font-size: 18px;
            }

        .main-content {
            margin-left: 250px;
            padding: 35px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .back-btn {
            font-size: 14px;
        }
    </style>
</head>

<body>

    @{
        var role = Context.Session.GetString("Role");
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }

    @if (role == "Patient")
    {
        <!-- Sidebar -->
        <div class="sidebar">
            <h4>MediClinic</h4>

            <a class="@(currentController == "Patients" ? "active" : "")"
               asp-controller="Patients"
               asp-action="Dashboard">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>

            <a class="@(currentController == "Appointments" ? "active" : "")"
               asp-controller="Appointments"
               asp-action="Index">
                <i class="bi bi-calendar-check me-2"></i> Appointments
            </a>

            <a class="@(currentController == "Prescriptions" ? "active" : "")"
               asp-controller="Prescriptions"
               asp-action="Index">
                <i class="bi bi-file-earmark-medical me-2"></i> Prescriptions
            </a>

            <a class="@(currentController == "DrugRequests" ? "active" : "")"
               asp-controller="DrugRequests"
               asp-action="Index">
                <i class="bi bi-capsule me-2"></i> Drug Requests
            </a>

            <a class="@(currentController == "Patients" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")"
               asp-controller="Patients"
               asp-action="Profile">
                <i class="bi bi-person me-2"></i> Profile
            </a>

            <a asp-controller="User" asp-action="Logout">
                <i class="bi bi-box-arrow-right me-2"></i> Logout
            </a>
        </div>
    }

    <!-- Main Content -->
    <div class="main-content">

        @{
            
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        }

        @* Show Back button only if NOT on Dashboard *@
        @if (!(currentController == "Patients" && currentAction == "Dashboard"))
        {
            <div class="text-end mb-3">
                <a asp-controller="Patients"
                   asp-action="Dashboard"
                   class="btn btn-outline-secondary">
                    ← Back to Dashboard
                </a>
            </div>
        }

        @RenderBody()

    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

