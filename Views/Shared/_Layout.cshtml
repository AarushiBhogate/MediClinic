<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MediClinic</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, #0f766e, #0891b2);
            padding-top: 30px;
            color: white;
        }

            .sidebar h4 {
                font-weight: 600;
                padding-left: 25px;
                margin-bottom: 40px;
            }

            .sidebar a {
                display: block;
                padding: 14px 25px;
                color: rgba(255,255,255,0.9);
                text-decoration: none;
                font-weight: 500;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: rgba(255,255,255,0.1);
                    padding-left: 35px;
                }

                .sidebar a.active {
                    background-color: rgba(255,255,255,0.2);
                    border-left: 4px solid white;
                }

        .main-content {
            margin-left: 240px;
            padding: 40px;
        }
    </style>

    <div class="sidebar">
        <h4>MediClinic</h4>

        @{
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        }

        <a class="@(currentController == "Patients" ? "active" : "")"
           asp-controller="Patients"
           asp-action="Dashboard">
            <i class="bi bi-speedometer2 me-2"></i> Dashboard
        </a>

        <a class="@(currentController == "Appointments" ? "active" : "")"
           asp-controller="Appointments"
           asp-action="Index">
            <i class="bi bi-calendar-check me-2"></i> Appointments
        </a>

        <a class="@(currentController == "Prescriptions" ? "active" : "")"
           asp-controller="Prescriptions"
           asp-action="Index">
            <i class="bi bi-file-earmark-medical me-2"></i> Prescriptions
        </a>

        <a class="@(currentController == "DrugRequests" ? "active" : "")"
           asp-controller="DrugRequests"
           asp-action="Index">
            <i class="bi bi-capsule me-2"></i> Drug Requests
        </a>

        <a class="@(currentController == "Patients" ? "active" : "")"
           asp-controller="Patients"
           asp-action="Profile">
            <i class="bi bi-person me-2"></i> Profile
        </a>


    </div>

    <div class="main-content">
        @RenderBody()
    </div>

</head>
<body>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-3">

                <h4 class="fw-bold mb-4">MediClinic</h4>

                <a asp-controller="Patients" asp-action="Dashboard">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <a asp-controller="Appointments" asp-action="Index">
                    <i class="bi bi-calendar-check"></i> Appointments
                </a>

                <a asp-controller="Prescriptions" asp-action="Index">
                    <i class="bi bi-file-medical"></i> Prescriptions
                </a>

                <a asp-controller="DrugRequests" asp-action="Index">
                    <i class="bi bi-capsule"></i> Drug Requests
                </a>

                <a asp-controller="Patients" asp-action="Profile">
                    <i class="bi bi-person"></i> Profile
                </a>

                <a asp-controller="User" asp-action="ChangePassword">
                    <i class="bi bi-lock"></i> Change Password
                </a>

                <a asp-controller="User" asp-action="Logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>

            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>

        </div>
    </div>

</body>
</html>


