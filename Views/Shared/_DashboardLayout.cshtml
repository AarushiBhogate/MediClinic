            margin-top: 60px;
            margin-left: 70px;
            padding: 30px;
            padding-bottom: 70px; /* important */
            transition: margin-left 0.4s ease;
        }


        .sidebar:hover ~ .main-content {
            margin-left: 230px;
        }

        /* ================= FOOTER ================= */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: white;
            text-align: center;
            padding: 12px;
            box-shadow: 0 -2px 6px rgba(0,0,0,0.05);
            z-index: 999;
        }

    </style>
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div style="display:flex; align-items:center; gap:15px;">
            <i class="fas fa-bars"></i>
            <div class="brand">MediClinic</div>
        </div>

        <div class="nav-right">
            <i class="fas fa-bell"></i>

            <div class="nav-profile" onclick="toggleProfileMenu()">

                @if (Context.Session.GetString("ProfileImage") == null)
                {
                    <i class="fas fa-user-circle profile-icon"></i>
                }
                else
                {
                    <img src="@Context.Session.GetString("ProfileImage")"
                         class="profile-img" />
                }

                <div class="profile-dropdown" id="profileDropdown">

                    <form asp-controller="Patients"
                          asp-action="UploadProfileImage"
                          method="post"
                          enctype="multipart/form-data">

                        <label for="profileUpload" class="dropdown-item">
                            Change Image
                        </label>

                        <input type="file"
                               id="profileUpload"
                               name="profileImage"
                               style="display:none;"
                               onchange="this.form.submit();" />
                    </form>

                    @if (Context.Session.GetString("ProfileImage") != null)
                    {
                        <form asp-controller="Patients"
                              asp-action="RemoveProfileImage"
                              method="post">
                            <button type="submit" class="dropdown-item">
                                Remove Image
                            </button>
                        </form>
                    }

                    <a asp-controller="Patients"
                       asp-action="Profile"
                       class="dropdown-item">
                        View Profile
                    </a>

                </div>
            </div>
        </div>
    </div>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <ul>
            <li>
                <a href="/Patients/Dashboard">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li>
                <a asp-controller="Appointments" asp-action="Index">
                    <i class="fas fa-calendar-check"></i>
                    <span>Appointments</span>
                </a>
            </li>
<li>
