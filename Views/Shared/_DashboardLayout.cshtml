            border: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
        }

            .dropdown-item:hover {
                background: #f3f4f6;
            }

        /* ================= SIDEBAR ================= */
        .sidebar {
            position: fixed;
            top: 60px;
            left: 0;
            width: 70px;
            height: calc(100% - 60px);
            background: var(--primary);
            transition: width 0.4s ease;
            overflow-x: hidden;
        }

            .sidebar:hover {
                width: 230px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    padding: 15px 20px;
                }

                    .sidebar ul li a {
                        display: flex;
                        align-items: center;
                        text-decoration: none;
                        color: white;
                        font-size: 15px;
                    }

                    .sidebar ul li i {
                        width: 30px;
                        font-size: 18px;
                    }

                    .sidebar ul li span {
                        opacity: 0;
                        transition: opacity 0.3s ease;
                        white-space: nowrap;
                    }

            .sidebar:hover ul li span {
                opacity: 1;
            }

            .sidebar ul li:hover {
                background: rgba(255,255,255,0.1);
                border-radius: 8px;
            }

