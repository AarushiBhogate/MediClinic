        <i class="fas fa-pills"></i>
        <span>Prescriptions</span>
    </a>
</li>


            

            <li>
                <a asp-controller="Patients" asp-action="Profile">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
            </li>

            <li>
                <a href="/User/Logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        @RenderBody()
    </div>

