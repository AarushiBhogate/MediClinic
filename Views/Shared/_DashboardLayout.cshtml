        html, body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: var(--light-bg);
        }

        /* ================= NAVBAR ================= */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 25px;
