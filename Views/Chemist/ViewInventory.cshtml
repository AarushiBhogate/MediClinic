@model List<MediClinic.Models.Drug>

@{
    ViewData["Title"] = "Inventory";
    // Layout = "~/Views/Shared/_LayoutRoles.cshtml";
}



<div class="inventory-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="inventory-card">

                    <h2 class="inventory-title mb-4 text-center">
                        Drug Inventory
                    </h2>

                    <div class="table-responsive">
                        <table class="table align-middle">

                            <thead>
                                <tr>
                                    <th>Drug Name</th>
                                    <th>Description</th>
                                    <th>Dosage</th>
                                    <th>Expiry</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@item.DrugTitle</td>

                                        <td>@item.Description</td>

                                        <td>
                                            <span class="badge-expiry">
                                                @item.Dosage
                                            </span>
                                        </td>

                                        <td>
                                            @{
                                                var isExpired = item.Expiry.HasValue &&
                                                item.Expiry.Value < DateOnly.FromDateTime(DateTime.Now);
                                            }

                                            <span class="badge-expiry @(isExpired ? "badge-warning" : "")">
                                                @item.Expiry?.ToString("dd MMM yyyy")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
