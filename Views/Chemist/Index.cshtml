@model MediClinic.Models.Chemist

@{
    ViewData["Title"] = "Chemist Dashboard";
}

<style>

    body {
        background: linear-gradient(135deg, #4e73df, #1cc88a);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .dashboard-wrapper {
        padding: 60px 0;
    }

    .dashboard-title {
        font-weight: 700;
        color: white;
        letter-spacing: 1px;
    }

    .dashboard-subtitle {
        color: rgba(255,255,255,0.85);
        font-size: 15px;
    }

    /* Glass Welcome Card */
    .welcome-card {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(18px);
        border-radius: 25px;
        padding: 35px;
        color: white;
        box-shadow: 0 12px 30px rgba(0,0,0,0.25);
        transition: 0.4s ease;
    }

        .welcome-card:hover {
            transform: translateY(-8px);
        }

    /* Dashboard Cards */
    .dashboard-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

    .dashboard-icon {
        font-size: 42px;
        margin-bottom: 15px;
    }

    /* Buttons */
    .dashboard-btn {
        display: inline-block;
        padding: 10px 22px;
        background: #4e73df;
        color: white;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .dashboard-btn:hover {
            background: #2e59d9;
            color: white;
        }

    .dashboard-btn-outline {
        display: inline-block;
        padding: 10px 22px;
        border: 2px solid #4e73df;
        color: #4e73df;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .dashboard-btn-outline:hover {
            background: #4e73df;
            color: white;
        }

    /* Small Stats Cards */
    .stat-card {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 20px;
        color: white;
        text-align: center;
        margin-bottom: 20px;
        transition: 0.3s ease;
    }

        .stat-card:hover {
            transform: scale(1.05);
        }

    .stat-number {
        font-size: 26px;
        font-weight: 700;
    }
</style>

<div class="dashboard-wrapper">
    <div class="container">

        <!-- HEADER -->
        <div class="text-center mb-5">
            <h2 class="dashboard-title">Chemist Dashboard</h2>
            <p class="dashboard-subtitle">
                Manage inventory, orders & drug requests efficiently
            </p>
        </div>

        <!-- STAT SECTION -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-number">12</div>
                    <div>Total Orders</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-number">5</div>
                    <div>Pending Requests</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-number">24</div>
                    <div>Available Drugs</div>
                </div>
            </div>
        </div>

        <div class="row g-4">

            <!-- LEFT PANEL -->
            <div class="col-lg-4">
                <div class="welcome-card h-100 d-flex flex-column justify-content-center">
                    <h4>Welcome, @Model?.ChemistName 👋</h4>
                    <p class="mt-3">
                        Track inventory, manage drug requests,
                        and process orders seamlessly.
                    </p>
                </div>
            </div>

            <!-- RIGHT CARDS -->
            <div class="col-lg-8">
                <div class="row g-4">

                    <!-- PROFILE -->
                    <div class="col-md-6">
                        <div class="dashboard-card">
                            <div class="dashboard-icon">🏥</div>
                            <h5>Profile</h5>
                            <a asp-action="EditProfile"
                               class="dashboard-btn">
                                Edit Profile
                            </a>
                        </div>
                    </div>

                    <!-- INVENTORY -->
                    <div class="col-md-6">
                        <div class="dashboard-card">
                            <div class="dashboard-icon">📦</div>
                            <h5>Inventory</h5>
                            <a asp-action="ViewInventory"
                               class="dashboard-btn">
                                View Inventory
                            </a>
                        </div>
                    </div>

                    <!-- ORDER DRUG -->
                    <div class="col-md-6">
                        <div class="dashboard-card">
                            <div class="dashboard-icon">📝</div>
                            <h5>Order Drugs</h5>
                            <a asp-action="OrderDrug"
                               class="dashboard-btn">
                                Place Order
                            </a>
                        </div>
                    </div>

                    <!-- MY ORDERS -->
                    <div class="col-md-6">
                        <div class="dashboard-card">
                            <div class="dashboard-icon">📋</div>
                            <h5>My Orders</h5>
                            <a asp-action="MyOrders"
                               class="dashboard-btn-outline">
                                View Orders
                            </a>
                        </div>
                    </div>

                    <!-- DRUG REQUESTS -->
                    <div class="col-md-6">
                        <div class="dashboard-card">
                            <div class="dashboard-icon">💊</div>
                            <h5>Drug Requests</h5>
                            <a asp-action="DrugRequests"
                               class="dashboard-btn-outline">
                                Manage Requests
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
