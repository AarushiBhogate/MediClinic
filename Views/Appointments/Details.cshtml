@model MediClinic.Models.Appointment
@{
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<style>
    .details-card {
        background: white;
        max-width: 800px;
        margin: auto;
        padding: 40px;
        border-radius: 22px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.08);
    }

    .details-label {
        font-weight: 600;
        color: #1e3a8a;
    }

    .details-value {
        margin-bottom: 18px;
        font-size: 16px;
    }

    .btn-back {
        background: #6b7280;
        color: white;
        padding: 8px 20px;
        border-radius: 10px;
        text-decoration: none;
    }

        .btn-back:hover {
            background: #4b5563;
        }
</style>

<div class="details-card">

    <h3 style="color:#1e3a8a;">Appointment Details</h3>
    <hr />

    <div class="details-value">
        <span class="details-label">Date:</span>
        @Model.AppointmentDate?.ToString("dd MMM yyyy")
    </div>

    <div class="details-value">
        <span class="details-label">Time:</span>
        @Model.AppointmentDate?.ToString("hh:mm tt")
    </div>

    <div class="details-value">
        <span class="details-label">Reason:</span>
        @Model.Reason
    </div>

    <div class="details-value">
        <span class="details-label">Criticality:</span>
        @Model.Criticality
    </div>

    <div class="details-value">
        <span class="details-label">Status:</span>
        @Model.ScheduleStatus
    </div>

    <a asp-action="Index" class="btn-back">
        Back
    </a>

</div> 
