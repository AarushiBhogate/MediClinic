@model List<MediClinic.Models.Appointment>
@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<h2>My Appointments</h2>
<form method="get" class="row mb-4">

    <div class="col-md-3">
        <input type="text"
               name="search"
               class="form-control"
               placeholder="Search by reason" />
    </div>

    <div class="col-md-2">
        <select name="status" class="form-select">
            <option value="">All Status</option>
            <option value="Pending">Pending</option>
            <option value="Scheduled">Scheduled</option>
            <option value="Cancelled">Cancelled</option>
            <option value="Completed">Completed</option>
        </select>
    </div>

    <div class="col-md-2">
        <input type="date"
               name="fromDate"
               class="form-control" />
    </div>

    <div class="col-md-2">
        <input type="date"
               name="toDate"
               class="form-control" />
    </div>

    <div class="col-md-3">
        <button type="submit"
                class="btn btn-primary w-100">
            Filter
        </button>
    </div>

</form>
<<div class="mb-3">

    <a asp-action="Index"
       class="btn btn-outline-dark">
        All
    </a>

    <a asp-action="Index"
       asp-route-status="Scheduled"
       class="btn btn-outline-primary">
        Scheduled
    </a>

    <a asp-action="Index"
       asp-route-status="Pending"
       class="btn btn-outline-warning">
        Pending
    </a>

    <a asp-action="Index"
       asp-route-status="Cancelled"
       class="btn btn-outline-danger">
        Cancelled
    </a>

    <a asp-action="Index"
       asp-route-status="Completed"
       class="btn btn-outline-success">
        Completed
    </a>

</div>




<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Reason</th>
            <th>Criticality</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.AppointmentId">
                        @item.AppointmentDate?.ToString("dd MMM yyyy HH:mm")
                    </a>
                </td>

                <td>@item.Reason</td>
                <td>@item.Criticality</td>

                <td>
                    @if (item.ScheduleStatus == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (item.ScheduleStatus == "Scheduled")
                    {
                        <span class="badge bg-primary">Scheduled</span>
                    }
                    else if (item.ScheduleStatus == "Cancelled")
                    {
                        <span class="badge bg-danger">Cancelled</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                </td>

                <td>
                    @if (item.ScheduleStatus == "Scheduled"
                    && item.AppointmentDate > DateTime.Now)
                    {
                        <a asp-action="Cancel"
                           asp-route-id="@item.AppointmentId"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to cancel this appointment?');">
                            Cancel
                        </a>
                    }
                    else if (item.ScheduleStatus == "Scheduled"
                    && item.AppointmentDate <= DateTime.Now)
                    {
                        <span class="badge bg-secondary">Expired</span>
                    }
                    else
                    {
                        <span class="text-muted">Not Allowed</span>
                    }
                </td>

            </tr>
        }
    </tbody>

</table>
<nav>
    <ul class="pagination">

        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-status="@ViewBag.CurrentStatus">
                    Previous
                </a>
            </li>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-status="@ViewBag.CurrentStatus">
                    @i
                </a>
            </li>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-status="@ViewBag.CurrentStatus">
                    Next
                </a>
            </li>
        }

    </ul>
</nav>


