@model IEnumerable<MediClinic.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="custom-card">
    <form method="get" class="row g-3">

        <div class="col-md-4">
            <input type="text" name="search" class="form-control"
                   placeholder="Search by reason..." />
        </div>

        <div class="col-md-3">
            <select name="status" class="form-select">
                <option value="">All Status</option>
                <option>Scheduled</option>
                <option>Pending</option>
                <option>Cancelled</option>
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100">Filter</button>
        </div>

    </form>
</div>

<div class="custom-card">
    <table class="table align-middle">

        <thead>
            <tr>
                <th>Date</th>
                <th>Reason</th>
                <th>Criticality</th>
                <th>Status</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.AppointmentDate?.ToString("dd MMM yyyy")
                        <br />
                        <small>@item.AppointmentDate?.ToString("hh:mm tt")</small>
                    </td>

                    <td>@item.Reason</td>

                    <td>
                        <span class="badge bg-secondary">
                            @item.Criticality
                        </span>
                    </td>

                    <td>
                        @if (item.ScheduleStatus == "Scheduled")
                        {
                            <span class="badge bg-success">Scheduled</span>
                        }
                        else if (item.ScheduleStatus == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                    </td>

                    <td class="text-end">

                        <a asp-action="Details"
                           asp-route-id="@item.AppointmentId"
                           class="btn btn-outline-primary btn-sm">
                            View
                        </a>

                        @if (item.ScheduleStatus == "Scheduled")
                        {
                            <a asp-action="Cancel"
                               asp-route-id="@item.AppointmentId"
                               class="btn btn-outline-danger btn-sm">
                                Cancel
                            </a>
                        }

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


