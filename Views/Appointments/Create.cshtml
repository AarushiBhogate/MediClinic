@model MediClinic.Models.Appointment

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Book Appointment";
}

<style>
    .booking-wrapper {
        padding: 50px 40px;
    }

    .booking-card {
        max-width: 700px;
        margin: auto;
        background: white;
        padding: 40px;
        border-radius: 22px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.08);
    }

    .booking-title {
        color: #1e3a8a;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .form-group-custom {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-custom {
        width: 100%;
        padding: 10px 14px;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        transition: 0.3s;
    }

        .form-control-custom:focus {
            border-color: #2563eb;
            outline: none;
            box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
        }

    .btn-confirm {
        background: #2563eb;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 12px;
        font-weight: 500;
        transition: 0.3s;
        box-shadow: 0 10px 25px rgba(37,99,235,0.25);
    }

        .btn-confirm:hover {
            background: #1e40af;
            transform: translateY(-2px);
        }

    .btn-cancel {
        margin-left: 10px;
        text-decoration: none;
        color: #6b7280;
    }
</style>

<div class="booking-wrapper">

    <div class="booking-card">

        <h3 class="booking-title">Book New Appointment</h3>

        <form asp-action="Create" method="post">

            <div class="form-group-custom">
                <label class="form-label">Date & Time</label>
                <input asp-for="AppointmentDate"
                       type="datetime-local"
                       class="form-control-custom" />
            </div>

            <div class="form-group-custom">
                <label class="form-label">Required Specialization</label>
                <input asp-for="RequiredSpecialization"
                       class="form-control-custom"
                       placeholder="Example: Cardiologist" />
            </div>

            <div class="form-group-custom">
                <label class="form-label">Criticality</label>
                <select asp-for="Criticality" class="form-control-custom">
                    <option>Low</option>
                    <option>Medium</option>
                    <option>High</option>
                </select>
            </div>

            <div class="form-group-custom">
                <label class="form-label">Reason</label>
                <textarea asp-for="Reason"
                          rows="3"
                          class="form-control-custom"></textarea>
            </div>

            <button type="submit" class="btn-confirm">
                Confirm Booking
            </button>

            <a asp-action="Index" class="btn-cancel">
                Cancel
            </a>

        </form>

    </div>

</div>
