@model MediClinic.Models.ModelViews.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container-fluid register-wrapper">
    <div class="row min-vh-100">


        <!-- LEFT SIDE -->
        <div class="col-lg-6 text-center">
            <div class="register-illustration">
                <video autoplay muted>
                    <source src="~/videos/sign up.mp4" type="video/mp4">
                </video>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="col-lg-6 d-flex justify-content-center">
            <div class="register-card">

             

                <form method="post">

                    <input type="hidden" name="Role" value="Patient" />

                    <div class="mb-3">
                        <label>Full Name</label>
                        <input type="text" name="FullName" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label>Phone</label>
                        <input type="text" name="Phone" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="Email" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label>Username</label>
                        <input type="text" name="UserName" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" name="Password" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label>DOB</label>
                        <input type="date" name="DOB" class="form-control form-control-lg" />
                    </div>

                    <div class="mb-3">
                        <label>Gender</label>
                        <select name="Gender" class="form-control form-control-lg">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>

                

                    <button type="submit" class="btn btn-success w-100 btn-lg mt-3">
                        Register
                    </button>

                </form>
            </div>
        </div>

    </>
</div>


<script>
    const roleSelect = document.getElementById("roleSelect");
    const patientSection = document.getElementById("patientSection");
    const physicianSection = document.getElementById("physicianSection");

    roleSelect.addEventListener("change", function () {
        if (this.value === "Patient") {
            patientSection.style.display = "block";
            physicianSection.style.display = "none";
        }
        else if (this.value === "Physician") {
            physicianSection.style.display = "block";
            patientSection.style.display = "none";
        }
        else {
            patientSection.style.display = "none";
            physicianSection.style.display = "none";
        }
    });
</script>

    <style>
    body {
        background: #E9EEF2;
    }

    .register-wrapper {
            min-height: 100vh;
            padding: 80px 5% 40px 5%;
    }

    .register-illustration video {
         width: 100%;
    max-width: 450px;
        border-radius: 20px;
    }

    .register-card {
        background: white;
        padding: 35px 35px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        width: 100%;
        max-width: 420px;
    }

        .register-card h3 {
            font-weight: 600;
        }

    .btn-success {
        background: #1f7a6c;
        border: none;
    }

        .btn-success:hover {
            background: #176358;
        }

    </style>