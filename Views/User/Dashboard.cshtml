@{
    ViewData["Title"] = "MediClinic Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f4f9ff;
    }

    .dashboard-card {
        transition: 0.3s;
    }

        .dashboard-card:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-5">

    <h2 class="text-center mb-4 text-primary">
        MediClinic Dashboard
    </h2>

    <div class="row g-4">

        <!-- Appointments -->
        <div class="col-md-3">
            <div class="card shadow dashboard-card text-center">
                <div class="card-body">
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">Manage patient appointments</p>
                    <a href="#" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>

        <!-- Prescriptions -->
        <div class="col-md-3">
            <div class="card shadow dashboard-card text-center">
                <div class="card-body">
                    <h5 class="card-title">Prescriptions</h5>
                    <p class="card-text">View doctor prescriptions</p>
                    <a href="#" class="btn btn-success">View</a>
                </div>
            </div>
        </div>

        <!-- Drug Requests -->
        <div class="col-md-3">
            <div class="card shadow dashboard-card text-center">
                <div class="card-body">
                    <h5 class="card-title">Drug Requests</h5>
                    <p class="card-text">Manage medicine orders</p>
                    <a href="#" class="btn btn-warning">View</a>
                </div>
            </div>
        </div>

        <!-- Profile -->
        <div class="col-md-3">
            <div class="card shadow dashboard-card text-center">
                <div class="card-body">
                    <h5 class="card-title">My Profile</h5>
                    <p class="card-text">Update your details</p>
                    <a href="#" class="btn btn-info">Edit</a>
                </div>
            </div>
        </div>

    </div>

    <div class="text-center mt-5">
        <a href="/User/Logout" class="btn btn-danger">Logout</a>
    </div>

</div>
