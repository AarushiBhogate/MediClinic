<section class="login-section">
    <div class="login-container">

        <!-- LEFT SIDE (Animation / Illustration) -->

        <div class="col-lg-6 d-flex justify-content-center align-items-center login-left">
            <div class="login-illustration">
                <video autoplay muted playsinline>

                    <source src="~/videos/login.mp4" type="video/mp4">
                </video>
            </div>
           
        </div>

        <!-- RIGHT SIDE (Form Card) -->
        <div class="login-right">
            <div class="login-card">

                <div class="login-tabs">
                    <span class="active">Login</span>
                    <a href="/User/Register">Register</a>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                }

                <form method="post" class="mt-3">

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" name="UserName" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" name="Password" class="form-control" required>
                    </div>

                    <div class="login-options">
                        <div>
                            <input type="checkbox">
                            <span>Remember me</span>
                        </div>
                        <a href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="login-btn mt-4">
                        Login
                    </button>
                    <div class="text-center mt-3">
                        <a href="/Guest/Index" class="guest-link">Continue as Guest</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</section>
<style>
    body {
        background: #E9EEF2;
    }
    .login-section {
        min-height: 92vh;
        display: flex;
        align-items: center;
        background: #E9EEF2;
        padding: 60px 0;
    }

    .login-container {
        max-width: 1100px;
        margin: auto;
        display: flex;
        gap: 60px;
        align-items: center;
    }

    .login-left {
        flex: 1;
         background: transparent !important;
    }

        .login-left video {
            width: 100%;
            max-width: 500px;
        }

    .login-right {
        flex: 1;
        display: flex;
        justify-content: center;
    }

    .login-card {
        background: white;
        padding: 50px;
        border-radius: 18px;
        box-shadow: 0 30px 80px rgba(0,0,0,0.08);
        padding: 70px 60px;
    }

    .login-tabs {
        display: flex;
        gap: 30px;
        border-bottom: 1px solid #e5e7eb;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

        .login-tabs span,
        .login-tabs a {
            font-weight: 500;
            text-decoration: none;
            color: #6b7280;
        }

        .login-tabs .active {
            color: #0f766e;
            border-bottom: 3px solid #0f766e;
            padding-bottom: 5px;
        }

    .login-options {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
    }

        .login-options a {
            text-decoration: none;
            color: #0f766e;
        }

    .login-btn {
        width: 100%;
        padding: 12px;
        border: none;
        background: #0f766e;
        color: white;
        border-radius: 8px;
        font-weight: 500;
        transition: 0.3s;
    }

        .login-btn:hover {
            background: #115e59;
        }

    @@media(max - width: 900px)

    {
        .login-container {
            flex-direction: column;
            gap: 40px;
        }
    }

    .login-illustration {
        position: relative;
        background: transparent !important;
        width: 100%;
        max-width: 650px;
}
    

        .login-illustration::before {
            content: "";
            position: absolute;
            width: 420px;
            height: 420px;
            background: rgba(15,118,110,0.08);
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 0;
        }

        .login-illustration img {
            position: relative;
            background: transparent !important;
        border: none;
        box-shadow: none;
            z-index: 1;
            max-width: 420px;
        max-width: 520px; /* increase from 420 */
        width: 100%;
        }
    .form-control {
        border-radius: 8px;
        padding: 10px 14px;
        border: 1px solid #d1d5db;
    }

        .form-control:focus {
            border-color: #0f766e;
            box-shadow: 0 0 0 3px rgba(15,118,110,0.15);
        }

    .guest-link {
        color: #1f7a6c;
        font-weight: 500;
        text-decoration: none;
    }

        .guest-link:hover {
            text-decoration: underline;
        }
