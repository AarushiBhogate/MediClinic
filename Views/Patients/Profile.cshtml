@model MediClinic.Models.Patient

<h2>My Profile</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <td>@Model.PatientName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
</table>

<a asp-action="EditProfile" class="btn btn-warning">
    Edit Profile
</a>


