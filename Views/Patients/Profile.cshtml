@model MediClinic.Models.Patient
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";

    var profileImage = Context.Session.GetString("ProfileImage");
}


<style>
    .profile-card {
        background: white;
        border-radius: 22px;
        padding: 50px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.08);
        max-width: 1000px;
        margin: auto;
        position: relative;
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 40px;
        margin-bottom: 40px;
    }

    .profile-photo-wrapper {
        position: relative;
        cursor: pointer;
    }

    .profile-photo {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #e5e7eb;
    }

    .profile-icon {
        font-size: 140px;
        color: #cbd5e1;
    }

    .profile-name {
        font-size: 26px;
        font-weight: 600;
        color: #1e3a8a;
    }

    .profile-email {
        color: #6b7280;
        margin-top: 6px;
        font-size: 15px;
    }

    .profile-actions {
        position: absolute;
        top: 30px;
        right: 40px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        margin-top: 20px;
    }

    .info-box {
        background: #f9fafb;
        padding: 25px;
        border-radius: 14px;
        transition: 0.2s;
    }

        .info-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

    .dropdown-menu-custom {
        position: absolute;
        top: 155px;
        left: 0;
        background: white;
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        padding: 8px 0;
        display: none;
        width: 190px;
        z-index: 100;
    }

        .dropdown-menu-custom button,
        .dropdown-menu-custom label {
            width: 100%;
            padding: 10px 18px;
            background: none;
            border: none;
            text-align: left;
            cursor: pointer;
            font-size: 14px;
        }

            .dropdown-menu-custom button:hover,
            .dropdown-menu-custom label:hover {
                background: #f3f4f6;
            }
</style>


<div class="profile-card">

    <div class="profile-actions">
        <a asp-action="EditProfile"
           class="btn btn-primary"
           style="border-radius:12px; padding:8px 20px;">
            Edit Profile
        </a>
    </div>

    <div class="profile-header">

        <div class="profile-photo-wrapper" onclick="toggleImageMenu()">

            @if (string.IsNullOrEmpty(profileImage))
            {
                <i class="fas fa-user-circle profile-icon"></i>
            }
            else
            {
                <img src="@profileImage" class="profile-photo" />
            }

            <div class="dropdown-menu-custom" id="imageMenu">

                <!-- Upload / Change -->
                <form asp-action="UploadProfileImage"
                      method="post"
                      enctype="multipart/form-data">

                    <label for="uploadImage">
                        @(string.IsNullOrEmpty(profileImage)
                                                ? "Add Image"
                                                : "Change Image")
                    </label>

                    <input type="file"
                           id="uploadImage"
                           name="profileImage"
                           style="display:none;"
                           onchange="this.form.submit();" />
                </form>

                <!-- Remove -->
                @if (!string.IsNullOrEmpty(profileImage))
                {
                    <form asp-action="RemoveProfileImage"
                          method="post">
                        <button type="submit">
                            Remove Image
                        </button>
                    </form>
                }

            </div>

        </div>

        <div>
            <div class="profile-name">@Model.PatientName</div>
            <div class="profile-email">@Model.Email</div>
        </div>

    </div>

    <div class="info-grid">

        <div class="info-box">
            <strong>Phone</strong>
            <div>@Model.Phone</div>
        </div>

        <div class="info-box">
            <strong>Address</strong>
            <div>@Model.Address</div>
        </div>

        <div class="info-box">
            <strong>Date of Birth</strong>
            <div>@Model.Dob?.ToString("dd MMM yyyy")</div>
        </div>

        <div class="info-box">
            <strong>Gender</strong>
            <div>@Model.Gender</div>
        </div>

    </div>

</div>

<script>
    function toggleImageMenu() {
        var menu = document.getElementById("imageMenu");
        menu.style.display =
            menu.style.display === "block" ? "none" : "block";
    }

    window.onclick = function (e) {
        if (!e.target.closest('.profile-photo-wrapper')) {
            document.getElementById("imageMenu").style.display = "none";
        }
    }
</script>






