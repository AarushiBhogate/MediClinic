@model MediClinic.ViewModels.PatientDashboardViewModel
@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
@{
    ViewData["Title"] = "Patient Dashboard";
}

<style>
    body {
        background: #f4f6f9;
    }

    .welcome-box {
        background: linear-gradient(135deg, #4f46e5, #3b82f6);
        color: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 15px 30px rgba(0,0,0,0.08);
    }

    .dashboard-card {
        background: white;
        border-radius: 20px;
        padding: 25px;
        height: 190px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.06);
        transition: 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

    .card-title {
        font-size: 14px;
        color: #6b7280;
        letter-spacing: 1px;
    }

    .card-value {
        font-size: 26px;
        font-weight: 600;
        margin-top: 10px;
        color: #111827;
    }

    .card-link {
        margin-top: 15px;
        display: inline-block;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        color: #3b82f6;
    }

    .quick-btn {
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .quick-btn:hover {
            transform: translateY(-2px);
        }
</style>

<div class="container py-4">

    <!-- Welcome Section -->
    <div class="welcome-box mb-5">
        <h3 class="fw-semibold">
            Welcome back, @Model.Patient?.PatientName 👋
        </h3>
        <p class="mb-0">Here’s your personal health overview</p>
    </div>

    <!-- Cards -->
    <div class="row g-4">

        <div class="col-md-3">
            <div class="dashboard-card">
                <div class="card-title">NEXT APPOINTMENT</div>
                <div class="card-value">
                    @(Model.NextAppointment?.AppointmentDate?.ToString("dd MMM yyyy")
                                        ?? "No Appointment")
                </div>
                <a asp-controller="Appointments"
                   asp-action="Index"
                   class="card-link">
                    View details →
                </a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-card">
                <div class="card-title">PRESCRIPTIONS</div>
                <div class="card-value">
                    @Model.TotalPrescriptions
                </div>
                <a asp-controller="Prescriptions"
                   asp-action="Index"
                   class="card-link">
                    View →
                </a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-card">
                <div class="card-title">PENDING REQUESTS</div>
                <div class="card-value">
                    @Model.PendingDrugRequests
                </div>
                <a asp-controller="DrugRequests"
                   asp-action="Index"
                   class="card-link">
                    View →
                </a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-card">
                <div class="card-title">MY PROFILE</div>
                <div class="card-value">
                    @Model.Patient?.PatientName
                </div>
                <a asp-controller="Patients"
                   asp-action="Profile"
                   class="card-link">
                    Manage →
                </a>
            </div>
        </div>

    </div>

    <!-- Quick Actions -->
    <div class="mt-5">
        <h5 class="fw-semibold mb-3">Quick Actions</h5>

        <div class="d-flex gap-3 flex-wrap">
            <a asp-controller="Appointments"
               asp-action="Create"
               class="btn btn-primary quick-btn">
                Book Appointment
            </a>

            <a asp-controller="User"
               asp-action="ChangePassword"
               class="btn btn-outline-dark quick-btn">
                Change Password
            </a>

            <a asp-controller="User"
               asp-action="Logout"
               class="btn btn-outline-danger quick-btn">
                Logout
            </a>
        </div>
    </div>

</div>









