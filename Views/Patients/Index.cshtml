@model IEnumerable<MediClinic.Models.Patient>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Patients";
}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3>Patient List</h3>

        <a asp-controller="Admin"
           asp-action="CreatPatients"
           class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Patient
        </a>

    </div>

    <div class="card-body">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th width="220px">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.Dob</td>
                        <td>@item.Gender</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>
                           @if (item.PatientStatus == "Active")
{
    <span class="badge bg-success">Active</span>
}
else if (item.PatientStatus == "Inactive")
{
    <span class="badge bg-danger">Inactive</span>
}
else if (item.PatientStatus == "Pending")
{
    <span class="badge bg-warning text-dark">Pending</span>
}
else
{
    <span class="badge bg-secondary">Unknown</span>
}
                            
                        </td>
                        <td>
                            <a asp-controller="Admin"
                               asp-action="EditPatients"
                               asp-route-id="@item.PatientId"
                               class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a asp-controller="Admin"
                               asp-action="GetPatientById"
                               asp-route-id="@item.PatientId"
                               class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>

                            <a asp-controller="Admin"
                               asp-action="DeletePatients"
                               asp-route-id="@item.PatientId"
                               class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
