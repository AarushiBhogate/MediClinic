@{
    ViewData["Title"] = "Create Drug Request";
}
@{
    Layout = "~/Views/Shared/_PhysicianDashboardLayout.cshtml";
}
<div class="advice-wrapper">

    <!-- HEADER -->
    <div class="page-header">
        <div>
            <h2 class="page-title">Create Drug Request</h2>
            <p class="page-subtitle">
                Enter medicine details you want to request
            </p>
        </div>

        <a class="btn-secondary-action" href="/DrugRequest/Index">
            Back
        </a>
    </div>

    <!-- CARD -->
    <div class="section-card">

        <form method="post" action="/DrugRequest/Create" class="modern-form">

            <div class="form-group">
                <label class="form-label">
                    Drug Details <span class="required">*</span>
                </label>

                <textarea class="form-textarea"
                          name="drugsInfoText"
                          required
                          placeholder="Example:

Paracetamol 500mg - 50 strips
Amoxicillin 250mg - 20 strips
Cough Syrup - 10 bottles"></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary-action">
                    Submit Request
                </button>

                <a class="btn-secondary-action" href="/DrugRequest/Index">
                    Cancel
                </a>
            </div>

        </form>

    </div>

</div>
<style>
    /* ===== LAYOUT ===== */

    .advice-wrapper {
        max-width: 900px;
        margin: 50px auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-weight: 700;
        font-size: 28px;
    }

    .page-subtitle {
        color: #64748b;
        margin-top: 4px;
        font-size: 14px;
    }

    /* ===== CARD ===== */

    .section-card {
        background: white;
        padding: 35px 40px;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 8px 20px rgba(15,23,42,0.04);
    }

    /* ===== FORM ===== */

    .modern-form {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
    }

    .required {
        color: #dc2626;
    }

    .form-textarea {
        border: 1px solid #e2e8f0;
        border-radius: 14px;
        padding: 16px;
        font-size: 14px;
        min-height: 140px;
        resize: vertical;
        transition: 0.2s;
    }

        .form-textarea:focus {
            outline: none;
            border-color: #0ea5e9;
            box-shadow: 0 0 0 3px rgba(14,165,233,0.15);
        }

    /* ===== ACTIONS ===== */

    .form-actions {
        display: flex;
        gap: 12px;
    }

    /* ===== BUTTONS ===== */

    .btn-primary-action {
        background: #0ea5e9;
        color: white;
        padding: 10px 22px;
        border-radius: 999px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        border: none;
        transition: 0.2s;
    }

        .btn-primary-action:hover {
            background: #0284c7;
        }

    .btn-secondary-action {
        background: transparent;
        color: #64748b;
        padding: 10px 18px;
        border-radius: 999px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-secondary-action:hover {
            background: #f1f5f9;
        }

</style>