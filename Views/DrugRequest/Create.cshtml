@{
    ViewData["Title"] = "Create Drug Request";
}

<div class="phys-container">

    <h2 class="phys-title">Create Drug Request</h2>
    <p class="phys-subtitle">Enter medicine details you want to request</p>

    <div class="phys-card phys-form">

        <form method="post" action="/DrugRequest/Create">

            <div class="mb-3">
                <label>Drug Details *</label>
                <textarea class="form-control phys-textarea" name="drugsInfoText" required
                          placeholder="Example:
Paracetamol 500mg - 50 strips
Amoxicillin 250mg - 20 strips
Cough Syrup - 10 bottles"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-teal">Submit Request</button>
                <a class="btn btn-outline-teal" href="/DrugRequest/Index">Cancel</a>
            </div>

        </form>

    </div>
</div>
