@model List<MediClinic.Models.DrugRequest>
@{
    Layout = "~/Views/Shared/_PhysicianDashboardLayout.cshtml";
}
@{
    ViewData["Title"] = "Drug Requests";
}
<div class="advice-wrapper">

    <!-- HEADER -->
    <div class="page-header">
        <div>
            <h2 class="page-title">Drug Requests</h2>
            <p class="page-subtitle">
                Request medicines from the clinic inventory
            </p>
        </div>

        <div class="header-actions">
            <a class="btn-primary-action" href="/DrugRequest/Create">
                + New Request
            </a>

            <a class="btn-secondary-action" href="/Physician/Dashboard">
                Back
            </a>
        </div>
    </div>

    <!-- CARD -->
    <div class="section-card">

        <div class="section-header">
            <h5>All Requests</h5>
            <span class="section-count">
                @(Model?.Count ?? 0)
            </span>
        </div>

        <div class="table-responsive">
            <table class="table modern-table align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Drugs Requested</th>
                        <th style="width:160px;">Status</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RequestDate</td>

                                <td class="fw-semibold text-muted">
                                    @item.DrugsInfoText
                                </td>

                                <td>
                                    <span class="pill @item.RequestStatus.ToLower()">
                                        @item.RequestStatus
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No drug requests found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
<style>
    /* ===== HEADER ===== */

    .advice-wrapper {
        max-width: 1000px;
        margin: 50px auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-weight: 700;
        font-size: 28px;
    }

    .page-subtitle {
        color: #64748b;
        margin-top: 4px;
        font-size: 14px;
    }

    .header-actions {
        display: flex;
        gap: 12px;
    }

    /* ===== CARD ===== */

    .section-card {
        background: white;
        padding: 35px 40px;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 8px 20px rgba(15,23,42,0.04);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .section-count {
        background: #eef2ff;
        color: #4338ca;
        padding: 6px 14px;
        border-radius: 30px;
        font-size: 13px;
        font-weight: 600;
    }

    /* ===== TABLE ===== */

    .modern-table thead th {
        font-size: 12px;
        text-transform: uppercase;
        color: #94a3b8;
        font-weight: 600;
        border-bottom: 1px solid #f1f5f9;
    }

    .modern-table tbody tr {
        border-bottom: 1px solid #f1f5f9;
        transition: 0.2s ease;
    }

        .modern-table tbody tr:hover {
            background: #f8fafc;
        }

    .modern-table td {
        padding: 14px 0;
    }

    /* ===== PILLS ===== */

    .pill {
        padding: 6px 14px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .pending {
        background: #fef9c3;
        color: #b45309;
    }

    .approved {
        background: #dcfce7;
        color: #15803d;
    }

    .rejected {
        background: #fee2e2;
        color: #b91c1c;
    }

    /* ===== BUTTONS ===== */

    .btn-primary-action {
        background: #0ea5e9;
        color: white;
        padding: 8px 18px;
        border-radius: 999px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-primary-action:hover {
            background: #0284c7;
        }

    .btn-secondary-action {
        background: transparent;
        color: #64748b;
        padding: 8px 16px;
        border-radius: 999px;
        font-size: 13px;
        font-weight: 500;
        text-decoration: none;
    }

        .btn-secondary-action:hover {
            background: #f1f5f9;
        }

</style>